{
  "name": "figs-in-space",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist *.mjs vite.config.ts.timestamp-*.mjs && find src tests -name '*.js' -type f -delete && echo 'Cleaned build artifacts and stale .js files'",
    "dev": "npm run clean && vite",
    "build": "npm run clean && tsc && vite build",
    "preview": "vite preview",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint src tests --ext .ts",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "phaser3spectorjs": "^0.0.8",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
