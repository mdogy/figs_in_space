{
  "name": "retro-vector-asteroids",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist *.mjs vite.config.ts.timestamp-*.mjs && find src tests -name '*.js' -type f -delete && echo 'Cleaned build artifacts and stale .js files'",
    "dev": "npm run clean && vite",
    "build": "npm run clean && tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint src tests --ext .ts"
  },
  "dependencies": {
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.0"
  }
}
