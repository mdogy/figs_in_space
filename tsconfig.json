{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@scenes/*": ["src/scenes/*"],
      "@prefabs/*": ["src/prefabs/*"],
      "@theme/*": ["src/theme/*"],
      "@ui/*": ["src/ui/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "tests"]
}
